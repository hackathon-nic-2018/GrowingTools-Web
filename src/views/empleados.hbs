

<div class="row">
    <div class="col-1">
        {{> sidebar}}
    </div>
    <div class="row mt-5 margin">
        <div class="col-9 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h1>Agregar un nuevo empleado</h1>
                </div>
                    <img src="/img/favicon.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo">
                 <div class="card-body">
                    <form action="/users/signin", method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" name="nombre" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="salario" placeholder="Salario" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="inss" placeholder="Inns" autofocus>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-primary">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>